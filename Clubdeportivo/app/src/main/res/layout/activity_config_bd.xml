<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/databaseConnection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="50dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/dbIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/database_svgrepo"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewDBConnection"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.666"/>

            <TextView
                android:id="@+id/textViewDBConnection"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginStart="350dp"
                android:text="Configuración BD"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dbIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Contenedor de configuración -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="24dp">

            <!-- Servidor -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Servidor"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etServidor"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="localhost"
                android:text="localhost"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:padding="16dp"/>

            <!-- Base de datos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Base de datos"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etBaseDatos"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="proyecto"
                android:text="proyecto"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:padding="16dp"/>

            <!-- Usuario -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etUsuario"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="root"
                android:text="root"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:padding="16dp"/>

            <!-- Contraseña -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etPasswordBD"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="******"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:padding="16dp"/>

            <!-- Puerto -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puerto"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etPuerto"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edit_text_background"
                android:hint="3306"
                android:text="3306"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:padding="16dp"/>

            <!-- Botones -->
            <Button
                android:id="@+id/btnGuardarConfig"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="GUARDAR"
                android:background="@drawable/button_bg_deg"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnProbarConexion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Probar Conexión"
                android:background="@drawable/button_secondary"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnVolverConfig"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Volver"
                android:background="@drawable/button_secondary"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>