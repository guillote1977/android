<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background_gradient"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/welcome_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="50dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/carneticon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/carnet_svgrepo_com"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewCarnet"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.666"/>

            <TextView
                android:id="@+id/textViewCarnet"
                android:layout_width="174dp"
                android:layout_height="25dp"
                android:layout_marginStart="350dp"
                android:text="Carnet Digital"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/carneticon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Contenedor del carnet (FRENTE) -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:background="@drawable/frentecarnet"
            android:padding="20dp"
            android:gravity="center">

            <!-- Nombre del cliente -->
            <TextView
                android:id="@+id/tvNombreCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JUAN PEREZ"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="95dp"/>

            <!-- Tipo de membresía -->
            <TextView
                android:id="@+id/tvMembresiaCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SOCIO"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginTop="5dp"/>

            <!-- DNI -->
            <TextView
                android:id="@+id/tvDNICarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: 35.462.587"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="20dp"/>

            <!-- Fechas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvVencimientoCarnet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vence: 23/12/2025"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <!-- Número de carnet -->
            <TextView
                android:id="@+id/tvNumeroCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ONX-240123-0001"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="17px"/>
        </LinearLayout>

        <!-- Información del carnet - AGREGAR ID A ESTE CONTENEDOR -->
        <LinearLayout
            android:id="@+id/containerAcciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvInfoCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este carnet es válido para acceso a todas las instalaciones del club."
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <!-- Botones de acción -->
            <Button
                android:id="@+id/btnEnviarEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="📧 Enviar por Email"
                android:background="@drawable/button_bg_deg"
                app:backgroundTint="@null"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnCompartirCarnet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="📤 Compartir Carnet"
                android:background="@drawable/button_bg_deg"
                app:backgroundTint="@null"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnVolverCarnet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="← Volver"
                android:background="@drawable/button_secondary"
                app:backgroundTint="@null"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>