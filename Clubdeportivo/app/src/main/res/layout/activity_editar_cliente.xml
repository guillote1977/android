<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Cliente"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifica los datos del cliente"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- Contenedor de datos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="24dp">

            <!-- Nombre Completo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etNombreCompleto"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="Juan Perez"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"/>

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="jperez@gmail.com"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"/>

            <!-- DNI -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DNI"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etDNI"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="35462587"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"/>

            <!-- Teléfono -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="3115687458"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"/>

            <!-- Tipo de Membresía -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Membresía"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rgMembresia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbSocio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FFFFFF"
                    android:text="Socio"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/rbNoSocio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FFFFFF"
                    android:text="No Socio"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

            <!-- Apto Físico -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apto Físico"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rgAptoFisico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbSiApto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FFFFFF"
                    android:text="Sí"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/rbNoApto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FFFFFF"
                    android:text="No"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

            <!-- Estado del Cliente -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado del Cliente"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rgEstadoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbActivo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FFFFFF"
                    android:text="Activo"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/rbInactivo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FFFFFF"
                    android:text="Inactivo"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

            <!-- Línea separadora -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#404040"
                android:layout_marginBottom="24dp"/>

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Botón Cancelar -->
                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_secondary"
                    android:text="CANCELAR"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- Botón Modificar -->
                <Button
                    android:id="@+id/btnModificar"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_primary"
                    android:text="MODIFICAR"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>