<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- T칤tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de pago"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- Contenedor principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="24dp">

            <!-- B칰squeda por DNI -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduce el n칰mero de DNI"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/etCampoDNI"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:hint="N칰mero de DNI"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:padding="16dp"/>

                <ImageButton
                    android:id="@+id/icoBuscar"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/button_primary"
                    android:src="@android:drawable/ic_menu_search"
                    android:tint="#FFFFFF"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Apellido y nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido y nombre"
                android:textColor="#8CFFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtDatosCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:visibility="gone"/>

            <!-- Tipo de Membres칤a -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Membres칤a"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <RadioGroup
                android:id="@+id/rgTipoMembresia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/rbSocio2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Socio"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbNoSocio2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No Socio"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"/>
            </RadioGroup>

            <!-- Monto -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monto"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etCampoMonto"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/edit_text_background"
                android:hint="$"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Secci칩n de descuento (inicialmente oculta) -->
            <TextView
                android:id="@+id/txtDescuento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游눯 Descuento del 5%: -$2.000"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtMontoFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游눳 Total a pagar: $38.000"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:visibility="gone"/>

            <!-- Formas de pago -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Formas de pago"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <RadioGroup
                android:id="@+id/rgFormaPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <RadioButton
                    android:id="@+id/rbEfectivo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Efectivo (5% descuento)"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbTarjeta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tarjeta"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"/>
            </RadioGroup>

            <!-- L칤nea separadora -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#404040"
                android:layout_marginBottom="24dp"/>

            <!-- Bot칩n Registrar Pago -->
            <Button
                android:id="@+id/btPagar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Registrar PAGO"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Bot칩n Ver Comprobante -->
            <Button
                android:id="@+id/btComprobante"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Ver COMPROBANTE"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:background="@drawable/button_secondary"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="32dp"
                android:visibility="gone"/>

            <!-- L칤nea separadora -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#404040"
                android:layout_marginBottom="24dp"/>

            <!-- 칔ltimos pagos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="칔ltimos pagos"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Lista de 칰ltimos pagos (simplificada) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_background"
                android:padding="16dp">

                <!-- Pago 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="40.000"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:paddingStart="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Cuota Mensual"
                        android:textColor="#8CFFFFFF"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Pago 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="35.000"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:paddingStart="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Cuota Mensual"
                        android:textColor="#8CFFFFFF"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Bot칩n Volver -->
            <Button
                android:id="@+id/btnVolver2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="VOLVER"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:background="@drawable/button_secondary"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>