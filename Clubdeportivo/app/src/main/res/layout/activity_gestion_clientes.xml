<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/main_background_gradient"
    android:padding="16dp">

    <!-- T铆tulo -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleActivityManagement"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activityManagementIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/client_svg"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewactivityManagement"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666"/>

        <TextView
            android:id="@+id/textViewactivityManagement"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginStart="350dp"
            android:text="Gestionar Cliente"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/activityManagementIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Barra de b煤squeda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etBuscarCliente"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:hint="Introduce DNI o ID del cliente a buscar"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="16dp"
            android:imeOptions="actionSearch"/>

        <ImageButton
            android:id="@+id/btnBuscar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/button_bg_deg"
            android:src="@android:drawable/ic_menu_search"
            android:layout_marginStart="8dp"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Filtros -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtros"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTodos"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Todos"
                android:background="@drawable/button_bg_deg"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnMorosos"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Morosos"
                android:background="@drawable/button_filter_inactive"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnPorVencer"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Por Vencer"
                android:background="@drawable/button_filter_inactive"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSinApto"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Sin apto f铆sico"
                android:background="@drawable/button_filter_inactive"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnActivos"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Activos"
                android:background="@drawable/button_filter_inactive"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnInactivos"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Inactivos"
                android:background="@drawable/button_filter_inactive"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Lista de clientes -->
    <TextView
        android:id="@+id/tvResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clientes encontrados: 4"
        android:textColor="#80FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvClientes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <!-- Bot贸n Compartir -->
    <Button
        android:id="@+id/btnCompartirLista"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_bg_deg"
        android:text=" Compartir Lista de Clientes"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <!-- Botones de acci贸n PRINCIPALES -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Bot贸n Nuevo Cliente -->
        <Button
            android:id="@+id/btnNuevoCliente"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_deg"
            android:text="Nuevo Cliente"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <!-- Bot贸n Editar -->
        <Button
            android:id="@+id/btnEditarCliente"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_secondary"
            android:text="Editar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <!-- Bot贸n Volver -->
        <Button
            android:id="@+id/btnVolverGestion"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_secondary"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>