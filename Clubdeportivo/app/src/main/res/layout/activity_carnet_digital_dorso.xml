<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎫 Carnet Digital"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Contenedor del carnet -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:background="@drawable/dorsocarnet"
            android:padding="20dp"
            android:gravity="center">

            <!-- Email institucional -->
            <TextView
                android:id="@+id/tvEmailInstitucionalCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="info@onyxfitness.com"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="170dp"/>

            <!-- Teléfono -->
            <TextView
                android:id="@+id/tvContactoCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+54 911 4658 745"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="3dp"/>

            <!-- Dirección -->
            <TextView
                android:id="@+id/tvDireccionCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Av. Imagine 745"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- DNI -->
            <TextView
                android:id="@+id/tvDNICarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: 35.462.587"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="20dp"/>

            <!-- Fechas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvVencimientoCarnet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vence: 23/12/2025"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <!-- Número de carnet -->
            <TextView
                android:id="@+id/tvNumeroCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ONX-240123-0001"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="10px"/>
            
            <ImageView
                android:id="@+id/clienteQR"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/qr_perezgonzalo"
                android:layout_marginBottom="40dp"
                android:padding="2dp"/>

        </LinearLayout>

        <!-- Información del carnet -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvInfoCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este carnet es válido para acceso a todas las instalaciones del club."
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <!-- Botones de acción -->
            <Button
                android:id="@+id/btnEnviarEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="📧 Enviar por Email"
                android:background="@drawable/button_primary"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnCompartirCarnet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="📤 Compartir Carnet"
                android:background="@drawable/button_export"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnVolverCarnet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="← Volver"
                android:background="@drawable/button_secondary"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>