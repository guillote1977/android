<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/main_background_gradient"
    android:padding="16dp">

    <!-- TÃ­tulo -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleActivityManagement"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activityManagementIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/activity_management_svg"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewactivityManagement"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666"/>

        <TextView
            android:id="@+id/textViewactivityManagement"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginStart="350dp"
            android:text="Gestionar Actividad"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/activityManagementIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Barra de bÃºsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etBuscarActividad"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:hint="Buscar actividad..."
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="16dp"
            android:imeOptions="actionSearch"/>

        <ImageButton
            android:id="@+id/btnBuscarActividad"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/button_bg_deg"
            android:src="@android:drawable/ic_menu_search"
            android:layout_marginStart="8dp"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Contador de resultados -->
    <TextView
        android:id="@+id/tvResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actividades encontradas: 4"
        android:textColor="#80FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <!-- Lista de actividades -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvActividades"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <!-- Botones de acciÃ³n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- BotÃ³n Nueva Actividad -->
        <Button
            android:id="@+id/btnNuevaActividad"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_deg"
            android:text="âž• Nueva"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <!-- BotÃ³n Exportar -->
        <Button
            android:id="@+id/btnExportar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_deg"
            android:text="ðŸ“¤ Exportar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <!-- BotÃ³n Volver -->
        <Button
            android:id="@+id/btnVolverActividades"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_secondary"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>