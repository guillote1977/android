<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/main_background_gradient"
    android:padding="16dp">

    <!-- TÃ­tulo -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleUserManagement"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/userManagementIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/register_user_svg"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewUserManagement"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666"/>

        <TextView
            android:id="@+id/textViewUserManagement"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginStart="350dp"
            android:text="Gestionar Usuarios"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/userManagementIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Barra de bÃºsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etBuscarUsuario"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:hint="Buscar usuario por nombre ..."
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="16dp"/>

        <ImageButton
            android:id="@+id/btnBuscarUsuario"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/button_bg_deg"
            android:src="@android:drawable/ic_menu_search"
            android:layout_marginStart="8dp"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USUARIO ENCONTRADO"
        android:textColor="#80FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <!-- Lista de usuarios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsuarios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <!-- Botones de acciÃ³n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNuevoUsuario"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_bg_deg"
            android:text="âž• Nuevo"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnExportar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_bg_deg"
            android:text="ðŸ“¤  Exportar"
            android:textColor="#FFFFFF"
            android:textSize="11sp"/>

        <Button
            android:id="@+id/btnVolverUsuario"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_secondary"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>